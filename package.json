{
	"name": "trio",
	"version": "0.1.0",
	"license": "ISC",
	"repository": "https://github.com/project-trio/trio",
	"description": "Multiplayer game server and realtime frontend with community features.",
	"scripts": {
		"start": "node src/server/index.js",
		"serve": "vue-cli-service serve",
		"schema": "pg_dump --schema-only --no-owner --no-privileges trio | sed -e '/^--/d' -e '/^SET/d' -e '/^COMMENT ON/d' -e 's/    /\t/g' | sed '/^$/N;/^\\n$/D' > db.sql",
		"b": "echo `date` && vue-cli-service build --modern && node build/deploy && echo `date`",
		"deploy": "git -C ../trio-deploy add . && git -C ../trio-deploy commit -m \"ðŸš€\" && git -C ../trio-deploy push dokku master && echo `date`"
	},
	"dependencies": {
		"@sendgrid/mail": "^7.4.2",
		"bluebird": "^3.7.2",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"module-alias": "^2.2.2",
		"pg-promise": "^10.9.1",
		"request": "^2.88.2",
		"socket.io": "^2.4.1"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^2.3.0",
		"@ky-is/eslint-config": "^1.9.1",
		"@ky-is/tailwind-color-palette": "^1.0.0",
		"@ky-is/tailwindcss-plugin-width-height": "^1.0.0",
		"@ky-is/trio-client": "^1.0.0",
		"@ky-is/vue-markdown-poi": "^1.0.1",
		"@vue/babel-preset-app": "^4.5.10",
		"@vue/cli-plugin-babel": "^4.5.10",
		"@vue/cli-plugin-eslint": "^4.5.10",
		"@vue/cli-service": "^4.5.10",
		"babel-eslint": "^10.1.0",
		"core-js": "^3.8.3",
		"eslint": "^7.18.0",
		"eslint-plugin-vue": "^7.4.1",
		"fs-extra": "^9.1.0",
		"postcss-preset-env": "^6.7.0",
		"spark-md5": "^3.0.1",
		"tailwindcss": "^1.9.6",
		"typescript": "^4.1.3",
		"vue": "^2.6.12",
		"vue-router": "^3.4.9",
		"vue-template-compiler": "^2.6.12",
		"vuex": "^3.6.0"
	},
	"babel": {
		"presets": [
			[
				"@vue/app",
				{
					"jsx": false,
					"loose": true,
					"modules": "commonjs"
				}
			]
		]
	},
	"browserslist": {
		"production": [
			"> 1%",
			"last 2 versions",
			"not ie <= 8"
		],
		"development": [
			"last 1 version",
			"not dead"
		]
	},
	"eslintConfig": {
		"extends": "@ky-is/eslint-config/vue",
		"rules": {
			"vue/html-indent": [
				"warn",
				"tab",
				{
					"baseIndent": 0
				}
			],
			"vue/require-default-prop": 0
		}
	},
	"_moduleAliases": {
		"@": "src"
	}
}
